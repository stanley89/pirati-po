= form_for @area do |f|
  - if @area.errors.any?
    #error_explanation
      %h2= "#{pluralize(@area.errors.count, "error")} prohibited this area from being saved:"
      %ul
        - @area.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :parent_id
    = f.collection_select :parent_id, Area.all, :id, :name
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :note
    = f.text_field :note
  .actions
    = f.submit 'Save'
